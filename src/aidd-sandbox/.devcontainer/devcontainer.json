{
  // コンテナの表示名
  "name": "AI-Driven sandbox",

  // ベースイメージ（開発ツール込みのNode.js環境）
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",

  // 追加機能（GitHub CLI）
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // コンテナ作成後に実行：Claude CLIのインストールとPATH設定
  "postCreateCommand": "curl -fsSL https://claude.ai/install.sh | bash && echo 'export PATH=\"$HOME/.local/bin:$PATH\"' >> ~/.bashrc",

  // VS Code拡張機能の自動インストール
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropics.claude-code"
      ]
    }
  }
}
